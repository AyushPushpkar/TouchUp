<!-- gradient_with_shadows.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient with shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A8CA5"
            android:endColor="#6BE3FF"
            android:angle="90" />
        </shape>
    </item>
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A8CA5"
                android:endColor="#6BE3FF"
                android:angle="90" />
            <corners android:radius="8dp" />
            <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Semi-transparent overlay with shadow -->
    <item android:left="6dp" android:right="6dp" android:top="16dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />  <!-- Adjusted transparency to 40% opacity -->
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item android:left="10dp" android:right="10dp" android:top="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />  <!-- Adjusted transparency to 40% opacity -->
            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>


